# AWS/Scaleway credentials for Terraform
# Requires direnv: https://direnv.net/

SCW_PROFILE="naglasupan-prod"

# AWS credentials (for S3-compatible object storage)
export AWS_PROFILE="$SCW_PROFILE"
if command -v aws &> /dev/null; then
    eval "$(aws configure export-credentials --profile "$SCW_PROFILE" --format env 2>/dev/null || true)"
fi

# Scaleway credentials (for Scaleway provider resources)
export SCW_ACCESS_KEY=$(scw config get access-key --profile "$SCW_PROFILE")
export SCW_SECRET_KEY=$(scw config get secret-key --profile "$SCW_PROFILE")
export SCW_DEFAULT_PROJECT_ID=$(scw config get default-project-id --profile "$SCW_PROFILE")
export SCW_DEFAULT_ORGANIZATION_ID=$(scw config get default-organization-id --profile "$SCW_PROFILE")
